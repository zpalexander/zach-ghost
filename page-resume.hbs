{{!< default}}
{{#post}}
<nav class="main-nav">
    <a href="{{@blog.url}}" class="header-back-btn js-bg-check left">
        <i class="fa fa-chevron-left"></i> Home
    </a>
    {{> "menu-activator-icon"}}
</nav>

<main id="resume" class="row" role="main">
    <article class="{{post_class}} small-12 columns">
        {{#author}}
        {{#if image}}
        <div class="post-author-avatar-container">
            <img src="{{image}}" class="post-author-avatar" alt="{{name}}" />
        </div>
        {{/if}}
        <h1 class="name">Resume</h1>
        <p aria-label="Social media links" class="social-media-links">
            <a href="https://www.linkedin.com/in/zpalexander">
                <img alt="Linked In" src="{{asset "images/linkedin.png"}}" />
            </a>
            <a href="https://github.com/zpalexander">
                <img alt="Github" src="{{asset "images/github.png"}}" />
            </a>
            <a href="http://www.instagram.com/zpalexander">
                <img alt="Instagram" src="{{asset "images/instagram.png"}}" />
            </a>
            <a href="{{@blog.url}}/rss">
                <img alt="RSS" src="{{asset "images/rss.png"}}" />
            </a>
        </p>
        {{/author}}
        <p class="description">
            I'm Zach Alexander.
        </p>
        <p class="description">
            I'm currently a software developer at <a href="https://amazon.com">amazon.com</a> I do all things web.
        </p>
        <section class="post-content">
            {{content}}
        </section>
    </article>
</main>
{{/post}}
